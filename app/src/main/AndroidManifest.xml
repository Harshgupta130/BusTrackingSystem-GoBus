<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bustrackingsystem">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BusTrackingSystem"
        tools:targetApi="31">
        <activity
            android:name=".LineMapUser"
            android:exported="false" />
        <activity
            android:name=".UserMainPage"
            android:exported="true" >


        </activity>
        <activity
            android:name=".DriverMainPage"
            android:exported="true" >

        </activity>
        <activity
            android:name=".Login"
            android:exported="true" >



        </activity>
        <activity
            android:name=".UserRegistration"
            android:exported="true">

        </activity>
        <activity
            android:name=".DriverRegistration"
            android:exported="true" >

        </activity>
        <activity
            android:name=".EntryPage"
            android:exported="true" >

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ForegroundService" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>